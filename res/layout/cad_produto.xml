<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FA8072"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.com.boracomer.CadProdutoActivity" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/produto" />
    
    <EditText 
        android:id="@+id/txtEdt10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tipo_produto" />
    
    <EditText 
        android:id="@+id/txtEdt11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/valor_produto" />
    
    <EditText 
        android:id="@+id/txtEdt12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    
    
    <Button 
        android:id="@+id/btnProduto11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Salvar"
        android:textStyle="bold"
        android:background="#DCDCDC"
        android:gravity="center"
        android:onClick="botao4"
        android:layout_margin="10dp"
        />
    
    <Button 
        android:id="@+id/btnProduto12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Editar"
        android:textStyle="bold"
        android:background="#DCDCDC"
        android:gravity="center"
        android:onClick="botao4"
        android:layout_margin="10dp"
        />
    
    <Button 
        android:id="@+id/btnProduto13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Excluir"
        android:textStyle="bold"
        android:background="#DCDCDC"
        android:gravity="center"
        android:onClick="botao4"
        android:layout_margin="10dp"
        />
    

</LinearLayout>
