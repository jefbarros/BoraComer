<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FA8072"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.com.boracomer.CadPratoActivity" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/prato" />
    
    <EditText 
        android:id="@+id/txtEdt6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tipo_prato" />
    
    <EditText 
        android:id="@+id/txtEdt7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/valor_prato" />
    
    <EditText 
        android:id="@+id/txtEdt8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    
    
    <Button 
        android:id="@+id/btnProduto8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Salvar"
        android:textStyle="bold"
        android:background="#DCDCDC"
        android:gravity="center"
        android:onClick="botao4"
        android:layout_margin="10dp"
        />
    
    <Button 
        android:id="@+id/btnProduto9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Editar"
        android:textStyle="bold"
        android:background="#DCDCDC"
        android:gravity="center"
        android:onClick="botao4"
        android:layout_margin="10dp"
        />
    
    <Button 
        android:id="@+id/btnProduto10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Excluir"
        android:textStyle="bold"
        android:background="#DCDCDC"
        android:gravity="center"
        android:onClick="botao4"
        android:layout_margin="10dp"
        />


</LinearLayout>
